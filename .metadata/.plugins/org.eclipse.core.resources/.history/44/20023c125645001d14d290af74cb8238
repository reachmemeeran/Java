package com.meeran.gs.learning;

import java.util.*;
public class Seven2DAverageFile {
	public static void main(String Args[]) {
		String[] file = {"Meeran","30","40","70",
				"Tony","60","70","80",
				"James","90","98","99"};
		
		System.out.println("Best Average is: "+bestAverage(file));
	}
	
	static double bestAverage(String[] file) {
		double average , bestAverage =0;
		String bestStudent="";
		Map<String, Double> averageMap = new HashMap<String,Double>();
		for(int i=0; i<file.length; i+=4) {
			average = (Integer.parseInt(file[i+1])+Integer.parseInt(file[i+2])+
					Integer.parseInt(file[i+3]))/3;
			if(average>bestAverage) {
				bestAverage=average;
				bestStudent=file[i];
			}
		}
		return bestAverage;
	}
}
