package com.meeran.gs.learning;

public class EnglishBeggers {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] test = {1, 2, 3, 4, 5};
        int[] a1 = {15}, a2 = {9, 6}, a3 = {5, 7, 3}, a4 = {1, 2, 3, 4, 5, 0}, a5 = {};
        System.out.println("Result - "+ a1+ "-" +beggars(test, 1));
        System.out.println("Result - "+ a2+ "-" +beggars(test, 2));
        System.out.println("Result - "+ a3+ "-" +beggars(test, 3));
        System.out.println("Result - "+ a4+ "-" +beggars(test, 6));
        System.out.println("Result - "+ a5+ "-" +beggars(test, 0));
	}
	
	public static int[] beggars(int[] values, int n) {
	    // show me the code!
		int[] output = new int[n];
		
		for(int i=0; i<n; i++) {
			int sum=0;
			for(int j=i; j<values.length; j+=n) {
				sum+=values[j];
			}
			output[i]=sum;
		}
		return output;
	  }

}
